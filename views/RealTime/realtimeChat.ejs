<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat Completions</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: #6200ea;
            --bg-dark: #0F0F0F;
            --bg-container: #1A1A1A;
            --border-color: #333;
            --text-color: #fff;
            --placeholder-color: #666;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background-image: url("/assets/images/bg-background.png");
            background-position: center;
            min-height: 100vh;
            background-color: var(--bg-dark);
            color: var(--text-color);
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            padding: 20px;
        }

        .chat-wrapper {
            width: 800px;
            height: 600px;
            background-color: var(--bg-container);
            border-radius: 12px;
            box-shadow: 0 8px 32px rgba(0, 33, 68, 0.3);
            position: relative;
            overflow: hidden;
        }

        .chat-layout {
            display: flex;
            height: 100%;
        }

        .chat-main {
            flex: 3;
            display: flex;
            flex-direction: column;
            height: 100%;
            border-right: 1px solid var(--border-color);
        }

        .chat-messages {
            flex-grow: 1;
            overflow-y: auto;
            padding: 20px;
            margin-bottom: 80px;
        }

        .message {
            padding: 16px;
            margin: 10px 0;
            max-width: 75%;
            position: relative;
            clear: both;
            border-radius: 12px;
            word-wrap: break-word;
        }

        .message--user {
            float: right;
            background-color: var(--primary-color);
            color: var(--text-color);
            margin-left: auto;
            border-bottom-right-radius: 4px;
        }

        .message--assistant {
            float: left;
            background-color: #2B2B2B;
            color: var(--text-color);
            margin-right: auto;
            border-bottom-left-radius: 4px;
        }

        .message__header {
            font-size: 0.85em;
            margin-bottom: 8px;
            color: #888;
        }

        .chat-input {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            padding: 20px;
            background-color: var(--bg-container);
            border-top: 1px solid var(--border-color);
        }

        .chat-input__container {
            position: relative;
        }

        .chat-input__textarea {
            width: 100%;
            padding: 16px 45px 16px 16px;
            border-radius: 8px;
            border: 1px solid var(--border-color);
            background-color: #262626;
            color: var(--text-color);
            resize: none;
            outline: none;
            font-size: 16px;
            max-height: 150px;
            min-height: 56px;
            transition: border-color 0.3s ease;
        }

        .chat-input__textarea:focus {
            border-color: var(--primary-color);
        }

        .chat-input__textarea::placeholder {
            color: var(--placeholder-color);
        }

        .chat-input__button {
            position: absolute;
            right: 12px;
            bottom: 50%;
            transform: translateY(50%);
            background: none;
            border: none;
            color: var(--text-color);
            cursor: pointer;
            font-size: 20px;
            transition: color 0.3s ease;
        }

        .chat-input__button:hover {
            color: #0084ff;
        }

        .chat-input__button:disabled {
            color: var(--placeholder-color);
            cursor: not-allowed;
        }

        .avatar {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
            width: 120px;
            height: 120px;
            border-radius: 50%;
            background-color: var(--bg-container);
            position: relative;
            overflow: hidden;
            border: 2px solid var(--border-color);
            margin: 10px;
        }

        .avatar__emoji {
            font-size: 48px;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            transition: transform 0.1s ease-out;
        }

        .typing-indicator {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 8px;
        }

        .typing-indicator__dot {
            width: 20px;
            height: 20px;
            background-color: var(--primary-color);
            border-radius: 50%;
            animation: bounce 1.5s infinite ease-in-out;
        }

        .typing-indicator__dot:nth-child(2) {
            animation-delay: 0.3s;
        }

        .typing-indicator__dot:nth-child(3) {
            animation-delay: 0.6s;
        }

        @keyframes bounce {

            0%,
            80%,
            100% {
                transform: scale(0.8);
                opacity: 0.7;
            }

            40% {
                transform: scale(1.2);
                opacity: 1;
            }
        }

        @media (max-width: 850px) {
            .chat-wrapper {
                width: 95%;
                height: 90vh;
                margin: 20px;
            }
        }

        ::-webkit-scrollbar {
            width: 8px;
        }

        ::-webkit-scrollbar-track {
            background: var(--bg-container);
        }

        ::-webkit-scrollbar-thumb {
            background: var(--border-color);
            border-radius: 4px;
        }

        ::-webkit-scrollbar-thumb:hover {
            background: #444;
        }
    </style>
</head>

