            border-radius: 4px;
        }

        ::-webkit-scrollbar-thumb:hover {
            background: #444;
        }

        /* Responsividade */
        @media (max-width: 850px) {
            .wrapper {
                width: 95%;
                height: 90vh;
                margin: 20px;
            }
        }

        .chat-layout {
            display: flex;
            height: 100%;
        }

        .chat-container {
            flex: 3;
